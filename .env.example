# LLM API key (OpenAI-compatible endpoint)
# Supports: OpenAI, Anthropic (via proxy), local models (Ollama, vLLM)
ACHERON_LLM_API_KEY=your-api-key-here
ACHERON_LLM_BASE_URL=https://api.openai.com/v1
ACHERON_LLM_MODEL=gpt-4o

# Embedding model (leave blank for local sentence-transformers)
# If set, uses OpenAI embeddings API; otherwise uses local model
ACHERON_EMBEDDING_API_KEY=
ACHERON_EMBEDDING_MODEL=all-MiniLM-L6-v2

# NCBI API key (optional, increases rate limits for PubMed)
# Get one at: https://www.ncbi.nlm.nih.gov/account/settings/
NCBI_API_KEY=

# Data directories
ACHERON_DATA_DIR=./data
ACHERON_VECTORSTORE_DIR=./data/vectorstore

# Server settings
ACHERON_HOST=127.0.0.1
ACHERON_PORT=8000

# Logging
ACHERON_LOG_LEVEL=INFO
