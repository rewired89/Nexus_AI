# LLM API key (OpenAI-compatible endpoint)
# Supports: OpenAI, Anthropic (via proxy), local models (Ollama, vLLM)
ACHERON_LLM_API_KEY=your-api-key-here
ACHERON_LLM_BASE_URL=https://api.openai.com/v1
ACHERON_LLM_MODEL=gpt-4o

# Embedding model (leave blank for local sentence-transformers)
# If set, uses OpenAI embeddings API; otherwise uses local model
ACHERON_EMBEDDING_API_KEY=
ACHERON_EMBEDDING_MODEL=all-MiniLM-L6-v2

# NCBI API key (optional, increases rate limits for PubMed)
# Get one at: https://www.ncbi.nlm.nih.gov/account/settings/
NCBI_API_KEY=

# Data directories
ACHERON_DATA_DIR=./data
ACHERON_VECTORSTORE_DIR=./data/vectorstore

# Server settings
ACHERON_HOST=127.0.0.1
ACHERON_PORT=8000

# Logging
ACHERON_LOG_LEVEL=INFO

# --- Nexus Interface (Arthur layer) ---
# Interface server (voice/avatar kiosk)
NEXUS_INTERFACE_HOST=0.0.0.0
NEXUS_INTERFACE_PORT=8100

# Whisper STT (local speech-to-text)
# Models: tiny, base, small, medium, large-v3
NEXUS_WHISPER_MODEL=base
NEXUS_WHISPER_DEVICE=auto

# Piper TTS (local text-to-speech) — path to .onnx voice model
# Download models from: https://github.com/rhasspy/piper/releases
NEXUS_PIPER_MODEL=

# ElevenLabs TTS (cloud text-to-speech) — fallback if Piper not configured
ELEVENLABS_API_KEY=
ELEVENLABS_VOICE_ID=21m00Tcm4TlvDq8ikWAM

# Session memory persistence
NEXUS_SESSION_PATH=data/nexus_session.json
